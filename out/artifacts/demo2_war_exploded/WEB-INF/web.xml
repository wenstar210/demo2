<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>com.student.controller.AddStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/AddStudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetStudentServlet</servlet-name>
        <servlet-class>com.student.controller.GetStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetStudentServlet</servlet-name>
        <url-pattern>/GetStudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DelStudentServlet</servlet-name>
        <servlet-class>com.student.controller.DelStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelStudentServlet</servlet-name>
        <url-pattern>/DelStudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindStudentServlet</servlet-name>
        <servlet-class>com.student.controller.FindStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindStudentServlet</servlet-name>
        <url-pattern>/FindStudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpStudentServlet</servlet-name>
        <servlet-class>com.student.controller.UpStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpStudentServlet</servlet-name>
        <url-pattern>/UpStudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.student.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.student.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>


</web-app>
